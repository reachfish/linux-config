#文件查找
function fgsub() { find . -name "*.lua" -exec grep -rl "$1" {} \; | xargs sed -i.bak "s/$1/$2/g" ; }

alias ccat='colorize'

# TMUX
if which tmux >/dev/null 2>&1; then
	# if no session is started, start a new session
	test -z ${TMUX} && tmux

	# when quitting tmux, try to attach
	while test -z ${TMUX}; do
		tmux attach || break
	done
fi
