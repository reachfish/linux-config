function svnuptags() 
{
	svn up ~/game/"$@"/trunk; 
	svn up ~/game/"$@"/trunk/xml; 
	svn up ~/game/"$@"/beta; 
	svn up ~/game/"$@"/test; 
	svn up ~/game/"$@"/shiwan; 
}

function svnup()
{
	svnuptags dh3;
	svnuptags dh3free;
	svn up ~/game/bridge_dh3/trunk/
	svn up ~/game/bridge_dh3free/trunk/
}

